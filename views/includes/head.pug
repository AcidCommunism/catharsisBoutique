doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        block title 
        link(rel="stylesheet" href="bootstrap/dist/css/bootstrap.css")
        block styles 
    body 
        nav(class="navbar navbar-expand-md navbar-dark bg-dark")
            .container-fluid 
                button.navbar-toggler(
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    )
                    span.navbar-toggler-icon 
                div(class="collapse navbar-collapse" id="navbarNav")
                    ul(class="navbar-nav ma-auto mb-2 mb-lg-0")
                        li.nav-item 
                            a(
                                class= path==='/' ? 'nav-link active': 'nav-link'
                                href="/"
                            ) Shop
                        if isAuthenticated
                            li.nav-item 
                                a(
                                    class= path==='/cart' ? 'nav-link active': 'nav-link'
                                    href="/cart"
                                ) Cart
                            li.nav-item 
                                a(
                                    class= path==='/orders' ? 'nav-link active': 'nav-link'
                                    href="/orders"
                                ) Orders
                            li.nav-item 
                                a(
                                    class= path==='/admin/products' ? 'nav-link active': 'nav-link'
                                    href="/admin/products"
                                ) Admin products
                            li.nav-item 
                                a(
                                    class= path==='/admin/add-product' ? 'nav-link active': 'nav-link'
                                    href="/admin/add-product"
                                ) Add product
                    ul(class="navbar-nav ms-auto mb-2 mb-lg-0")
                        if isAuthenticated
                            li(class="nav-item")  
                                .nav-link.disabled Hi, #{user.name}!
                            li(class="nav-item")                        
                                form(action="/sign-out" method="POST")
                                    input(
                                        type="hidden"
                                        value=csrfToken
                                        name="_csrf")
                                    button(class='btn nav-link' type='submit') Sign out
                        else
                            li(class="nav-item")
                                a(
                                    class= path==='/sign-in' ? 'nav-link active': 'nav-link'
                                    href="/sign-in"
                                ) Sign in
                            li(class="nav-item")
                                a(
                                    class= path==='/sign-up' ? 'nav-link active': 'nav-link'
                                    href="/sign-up"
                                ) Sign up
        block content
        block footer
        block scripts 