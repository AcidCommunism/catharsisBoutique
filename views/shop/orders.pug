extends ../includes/head.pug

block title 
    title #{pageTitle} 

block styles 
    link(rel="stylesheet" href="/css/main.css")

block content 
    main 
        if orders.length <= 0
            h1 Nothing here! 
        else 
            ul.orders 
                each order in orders 
                    li.orders__item  
                        h1  # #{order._id}
                        ul.orders__products
                            each product in order.items 
                                li.orders__products-item #{product.title} (#{product.quantity})
block scripts 
    script(src="/js/main.js")
    script(src="bootstrap/dist/js/bootstrap.bundle.js") 