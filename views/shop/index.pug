extends ../includes/head.pug

block title 
    title Shop 

block styles 
    link(rel="stylesheet" href="/styles/main.css")
    link(rel="stylesheet" href="/styles/product.css")

block content 
    main 
        if prods.length > 0
            div(class="row row-cols-1 row-cols-md-3 g-4 align-items-top") 
                each product in prods
                    div(class="col text-center d-flex justify-content-center")
                        div(class="card col-xl-12 border-dark bg-dark text-light")
                            div(class="card-header text-center") #{product.title}
                            img(src=product.imageUrl alt=product.title)
                            .card-body 
                                h5(class="card-title text-center") #{product.price}$
                                p(class="card-text text-center") #{product.description}

                            include ../includes/product-card-actions.pug
        else 
            h1 No products Found!
block scripts 
    script(src="/js/main.js")
    script(src="bootstrap/dist/js/bootstrap.bundle.js") 

