extends ../includes/head.pug

block title 
    title Sign in

block styles
    link(rel="stylesheet" href="/styles/main.css")

block content 
    if errorMessages & errorMessages.length
        div(aria-live="polite" aria-atomic="true" class="d-flex flex-column justify-content-center align-items-center m-3")
            each error in errorMessages
                div(class="toast error bg-dark text-light" role="error" aria-live="assertive" aria-atomic="true")
                    div(class="toast-header")
                        strong(class="me-auto") Oppsie-woopsie
                        small Just now
                        button(type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close")
                    div(class="toast-body") 
                        p Someone made a faki-waki: 
                        p(class='text-danger text-center') #{error}
    div(class="d-flex flex-column align-items-center m-5")
        div(class="card bg-dark w-auto")
            form(class="px-4 py-3" action="/sign-up" method="POST")
                div(class="mb-3")
                    label(for="name" class="form-label text-light") Tell us your Name
                    input(type="text" class="form-control bg-light bg-gradient border-dark" id="name" name="name" placeholder="John Doe Stevenson McNuggets Jr.")
                div(class="mb-3")
                    label(for="email" class="form-label text-light") Your email
                    input(type="email" class="form-control bg-light bg-gradient border-dark" id="email" name="email" placeholder="email@example.com")
                div(class="mb-3")
                    label(for="password" class="form-labe text-light") Your password
                    input(type="password" class="form-control bg-light bg-gradient border-dark" id="password" name="password" placeholder="P@$$w0rd")
                div(class="mb-3")
                    label(for="confirmPassword" class="form-labe text-light") Confirm password
                    input(type="password" class="form-control bg-light bg-gradient border-dark" id="confirmPassword" name="confirmPassword" placeholder="C0nf1rm P@$$w0rd")
                div(class="d-flex flex-column align-items-center")
                    input(
                        type="hidden"
                        value=csrfToken
                        name="_csrf")
                    button(class="btn btn-primary bg-dark" type="submit") Sign Up
            div(class="card-body")
                p(class="text-light") Already a member of our community? #[a(class="" href="/sign-in") Sign In!]


block scripts 
    script(src="bootstrap/dist/js/bootstrap.bundle.js")
    script(src="/js/main.js")