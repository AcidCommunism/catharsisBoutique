extends ../includes/head.pug

block title 
    title Update password

block styles
    link(rel="stylesheet" href="/styles/main.css")

block content 
    include ../includes/success-messages.pug
    include ../includes/error-messages.pug
    div(class="d-flex flex-column align-items-center m-5")
        div(class="card bg-dark w-auto")
            form(class="px-4 py-3" action="/auth/update-pwd" method="POST")
                div(class="mb-3")
                    label(for="password" class="form-labe text-light") New life starts with new password!
                    input(type="password" class="form-control bg-light bg-gradient border-dark" id="password" name="password" placeholder="P@$$w0rd")
                div(class="d-flex flex-column align-items-center container")
                    input(type="hidden" value=userId name="userId")
                    input(type="hidden" value=passwordToken name="passwordToken")
                    input(type="hidden" value=csrfToken name="_csrf")
                    button(class="btn btn-primary bg-dark success" type="submit")
                        a Update password

block scripts 
    script(src="/js/main.js")
    script(src="bootstrap/dist/js/bootstrap.bundle.js")