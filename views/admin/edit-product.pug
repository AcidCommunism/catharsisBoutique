extends ../includes/head.pug

block title 
    if editing
        title #{product.title}
    else 
        title Add product

block styles
    link(rel="stylesheet" href="/styles/main.css")

block content 
    main 
        if editing 
            form.product-form(
                action="/admin/edit-product" 
                method="POST")
                .mb-3 
                    label(for="title" class="text-light") Title 
                    input(
                        type="text"
                        name="title"
                        id="title"
                        value=product.title
                        class="form-control bg-dark text-light border-dark")
                .mb-3 
                    label(for="imageUrl" class="text-light") Image URL 
                    input(
                        type="text"
                        name="imageUrl"
                        id="imageUrl"
                        value=product.imageUrl
                        class="form-control bg-dark text-light border-dark")
                .mb-3 
                    label(for="price" class="text-light") Price 
                    input(
                        type="number"
                        name="price"
                        id="price"
                        step="0.01"
                        value=product.price
                        class="form-control bg-dark text-light border-dark") 
                .mb-3 
                    label(for="desctiption" class="text-light") Description 
                    textarea(
                        name="description"
                        id="description"
                        rows="5"
                        class="form-control bg-dark text-light border-dark") #{product.description}
                input(
                    type="hidden"
                    value=product._id
                    name="productId")
                button(type="submit" class="btn bg-dark border-dark") Update product
        else 
            form.product-form(
                action="/admin/add-product" 
                method="POST")
                .mb-3 
                    label(for="title" class="text-light border-dark") Title 
                    input(
                        type="text"
                        name="title"
                        id="title"
                        class="form-control bg-dark text-light border-dark")
                .mb-3 
                    label(for="imageUrl" class="text-light") Image URL 
                    input(
                        type="text"
                        name="imageUrl"
                        id="imageUrl"
                        value=""
                        class="form-control bg-dark text-light border-dark")
                .mb-3
                    label(for="price" class="text-light") Price 
                    input(
                        type="number"
                        name="price"
                        id="price"
                        step="0.01"
                        value=""
                        class="form-control bg-dark text-light border-dark") 
                .mb-3
                    label(for="desctiption" class="text-light") Description 
                    textarea(
                        name="description"
                        id="description"
                        rows="5"
                        class="form-control bg-dark text-light border-dark")
                button(type="submit" class="btn bg-dark") Add product
block scripts 
    script(src="/js/main.js")
    script(src="bootstrap/dist/js/bootstrap.bundle.js")