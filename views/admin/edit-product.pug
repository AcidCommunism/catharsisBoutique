extends ../includes/head.pug

block title 
    if editing
        title #{product.title}
    else 
        title Add product

block styles
    link(rel="stylesheet" href="/scss/main.css")

block content 
    main 
        if editing 
            form.product-form(
                action="/admin/edit-product" 
                method="POST")
                .mb-3 
                    label(for="title") Title 
                    input(
                        type="text"
                        name="title"
                        id="title"
                        value=product.title
                        class="form-control")
                .mb-3 
                    label(for="imageUrl") Image URL 
                    input(
                        type="text"
                        name="imageUrl"
                        id="imageUrl"
                        value=product.imageUrl
                        class="form-control")
                .mb-3 
                    label(for="price") Price 
                    input(
                        type="number"
                        name="price"
                        id="price"
                        step="0.01"
                        value=product.price
                        class="form-control") 
                .mb-3 
                    label(for="desctiption") Description 
                    textarea(
                        name="description"
                        id="description"
                        rows="5"
                        class="form-control") #{product.description}
                input(
                    type="hidden"
                    value=product._id
                    name="productId")
                button.btn(type="submit") Update product
        else 
            form.product-form(
                action="/admin/add-product" 
                method="POST")
                .mb-3 
                    label(for="title") Title 
                    input(
                        type="text"
                        name="title"
                        id="title"
                        class="form-control")
                .mb-3 
                    label(for="imageUrl") Image URL 
                    input(
                        type="text"
                        name="imageUrl"
                        id="imageUrl"
                        value=""
                        class="form-control")
                .mb-3
                    label(for="price") Price 
                    input(
                        type="number"
                        name="price"
                        id="price"
                        step="0.01"
                        value=""
                        class="form-control") 
                .mb-3
                    label(for="desctiption") Description 
                    textarea(
                        name="description"
                        id="description"
                        rows="5"
                        class="form-control")
                button.btn(type="submit") Add product
block scripts 
    script(src="/js/main.js")
    script(src="bootstrap/dist/js/bootstrap.bundle.js")